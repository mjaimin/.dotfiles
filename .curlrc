# .curlrc
# Configuration file for curl
# For more options, see 'man curl'

# Disguise as IE 9 on Windows 7.
user-agent = "Mozilla/5.0 (compatible; MSIE 9.0; Windows NT 6.1; Trident/5.0)"

# When following a redirect, automatically set the previous URL as referer.
referer = ";auto"

# Wait 60 seconds before timing out.
connect-timeout = 60

# Follow HTTP 3xx redirects
location = on

# Continue/Resume a previous file transfer
continue-at = -

# Show error messages
show-error = on

# Enable automatic decompression of compressed files over HTTP
compressed = on

# Additional options

# Enable verbose output, useful for debugging
# verbose = on

# Use IPv6
# ipv6 = on

# Limit the rate of data transfer, useful to not saturate your internet connection. The rate is in bytes per second.
# limit-rate = 200k

# Use a proxy. The proxy string can be specified with a protocol:// prefix to specify alternative proxy protocols.
# proxy = http://proxy.example.com:8080

# Specify the maximum size (in bytes) of a file to download. If the file requested is larger than this value, the transfer will not start and curl will return with exit code 63.
# max-filesize = 100000